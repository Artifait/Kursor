<Window x:Class="KursorClient.Windows.TeacherWorkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KursorClient.Windows"
        mc:Ignorable="d"
        Background="{DynamicResource BgBrush}" 
        Foreground="{DynamicResource AccentBrush}"
        Title="Kursor — Teacher"
        Width="960" Height="540"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">
    <Grid Margin="12">
        <Border CornerRadius="8" Padding="8" Background="#1B1A12">
            <Grid>
                <!-- Canvas с фиксированным соотношением можно реализовать через Viewbox/Uniform grid; упрощено -->
                <Canvas x:Name="PreviewCanvas" Background="#0F0F0F" MouseMove="PreviewCanvas_MouseMove" MouseLeftButtonDown="PreviewCanvas_MouseLeftButtonDown"/>
                <Button Content="Завершить" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="OnFinishClick"/>
            </Grid>
        </Border>
    </Grid>
</Window>
